bdefun + (a &rest 1 b)
       if b
          + a (apply #self b)
          a

bdefun * (a &rest 1 b)
       if b
          (* a (apply #self b))
          a

bdefun list (&rest 0 args) args

bdefun map (f l)
       if l
          cons (funcall #f car l)
               self f (cdr l)
          ()

bdefun reduce (f l) apply f l

